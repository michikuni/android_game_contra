<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme chung -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Splash theme (Android 12+ dùng attrs SplashScreen API) -->
    <style name="Theme.App.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Android 12+ -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <!-- Fallback pre-Android 12: dùng windowBackground -->
        <item name="android:windowBackground">@drawable/splash_background_legacy</item>
    </style>
</resources>
